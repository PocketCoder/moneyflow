generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model accounts {
  id       String     @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  owner    String?    @db.Uuid
  name     String     @db.VarChar(255)
  type     String     @db.VarChar(255)
  parent   String?    @db.VarChar(255)
  users    users?     @relation(fields: [owner], references: [id], onDelete: Cascade, onUpdate: NoAction)
  tags     String[]   @default(["touchable"])
  balances balances[]
}

model balances {
  id       String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  account  String?   @db.Uuid
  date     DateTime? @db.Date
  amount   Decimal?  @db.Decimal(10, 2)
  accounts accounts? @relation(fields: [account], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model users {
  id       String     @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name     String     @db.VarChar(255)
  auth0id  String?    @unique @db.VarChar(255)
  accounts accounts[]
}
